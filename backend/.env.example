# Backend Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==================== DATABASE CONFIGURATION ====================
# For development, using in-memory SQLite
DATABASE_URL=sqlite:///./clinical_extractor.db

# For production, use PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/clinical_extractor

# ==================== SECURITY CONFIGURATION ====================
# Generate a secure secret key with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==================== GEMINI API CONFIGURATION ====================
# Get your API key at: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# ==================== RATE LIMITING CONFIGURATION ====================
# Requests per minute per user
RATE_LIMIT_PER_MINUTE=60
# Maximum concurrent requests per user
MAX_CONCURRENT_REQUESTS=5

# ==================== CLOUD STORAGE CONFIGURATION ====================
# Supabase configuration (optional)
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_BUCKET=clinical-extractor-pdfs

# ==================== APPLICATION CONFIGURATION ====================
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Maximum PDF file size in MB
MAX_PDF_SIZE_MB=50

# ==================== DEVELOPMENT SETTINGS ====================
DEBUG=true
LOG_LEVEL=INFO
